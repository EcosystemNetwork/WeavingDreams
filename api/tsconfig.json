{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "**/*.ts",
    "../server/**/*.ts",
    "../shared/**/*.ts"
  ]
}
